:javascript
  $('.card-full-screen-toggler').on('click', function (event) {
    $('#only-card').toggleClass('d-none')
    $('#everything-else').toggleClass('d-none')
  })
  $(document).on('DOMContentLoaded', function() {
    var $copyLinks = $( '.copy-link' );
    $copyLinks.each( function() {
      $( this ).on( 'click', function( event ) {
        $( event.target ).text( function() { return "Copied!" } )

        var copySourceSelector = '.copyable-content'//event.target.dataset.copysource;
        var toBeCopied = $( copySourceSelector ).text()

        var $temp = $("<input>");
        $( "body" ).append( $temp );
        $temp.val( toBeCopied ).select();
        document.execCommand("copy");
        $temp.remove();
      })
    })
  })


